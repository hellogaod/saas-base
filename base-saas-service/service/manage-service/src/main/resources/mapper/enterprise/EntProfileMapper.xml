<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.base.saas.manage.mapper.enterprise.EntProfileMapper">
    <resultMap id="BaseResultMap" type="com.base.saas.manage.model.enterprise.EntProfile">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="company_code" property="companyCode" jdbcType="VARCHAR"/>
        <result column="delete_flag" property="deleteFlag" jdbcType="SMALLINT"/>
    </resultMap>
    <resultMap id="ResultMapWithBLOBs" type="com.base.saas.manage.model.enterprise.EntProfile" extends="BaseResultMap">
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, company_code, delete_flag
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>

    <select id="getInfo" parameterType="java.lang.String" resultType="com.base.saas.manage.model.enterprise.EntProfile">
        select company_code AS companyCode,content
        from ent_profile
        where company_code = #{companyCode} and delete_flag = 0
    </select>

    <insert id="insert" parameterType="com.base.saas.manage.model.enterprise.EntProfile">
        insert into ent_profile (id, company_code, delete_flag,
        content)
        values (#{id,jdbcType=VARCHAR}, #{companyCode,jdbcType=VARCHAR}, #{deleteFlag,jdbcType=SMALLINT},
        #{content,jdbcType=LONGVARCHAR})
    </insert>

    <update id="update" parameterType="com.base.saas.manage.model.enterprise.EntProfile">
        update ent_profile
        set content = #{content},
        delete_flag = #{deleteFlag}
        where company_code = #{companyCode} and delete_flag = 0
    </update>

</mapper>